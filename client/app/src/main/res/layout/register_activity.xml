<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
            android:id="@+id/heheheheh_xD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="327dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Please Type Your NickName"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#A8000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/nickInput"
            app:layout_constraintEnd_toEndOf="@+id/nickInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Please Type Your NickName"
            tools:visibility="visible" />

    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nickInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Your NickName"
            app:layout_constraintBottom_toTopOf="@+id/heheheheh_xD"
            app:layout_constraintEnd_toEndOf="@+id/heheheheh_xD"
            app:layout_constraintHorizontal_bias="0.467"
            app:layout_constraintStart_toStartOf="@+id/heheheheh_xD"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>